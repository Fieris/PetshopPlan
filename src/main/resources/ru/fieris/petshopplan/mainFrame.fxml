<AnchorPane prefHeight="720.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.fieris.petshopplan.controllers.MainController">
   <children>
       <MenuBar layoutY="2.0">
           <Menu mnemonicParsing="false" text="Файл">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#openExcelFile" text="Открыть Excel..." />
